#include <bits/stdc++.h>
using namespace std;

class Stack{
    queue<int> q1, q2;

public:
    void push(int x){
        q1.push(x);
    }

    void pop(){
        if(q1.empty()) return;

        while(q1.size() > 1){
            q2.push(q1.front());
            q1.pop();
        }
        q1.pop();                 
        swap(q1, q2);              
    }

    int top(){
        return q1.empty() ? -1 : q1.back();
    }
};

int main(){
    Stack s;
    int n, x;

    cout << "Enter number of elements: ";
    cin >> n;

    cout << "Enter elements:\n";
    for(int i=0; i<n; i++){
        cin >> x;
        s.push(x);
    }

    cout << "Top = " << s.top() << endl;

    s.pop();
    cout << "Top after pop = " << s.top();
}
